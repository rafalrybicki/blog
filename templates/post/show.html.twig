{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>{{ post.title }}</h1>

    <p class="text-muted">
        {{ post.createdAt|date('F j, Y') }} by
        <a href="#">{{ post.author }}</a>
    </p>

    {{ post.content|raw }}

    <div>
        <h2>Comments</h2>

        {% for comment in post.comments %}
            <div class="comment">
                <p class="text-black text-opacity-90">{{ comment.content }}</p>
                <span class="author">{{ comment.author }}</span>
                <small class="text-muted">
                    {{ comment.createdAt|date('F j, Y') }} at {{ comment.createdAt|date('g:i a') }}
                </small>
            </div>
        {% endfor %}

        {{ form(form, { 'attr': { 'class': 'row' } }) }}
    </div>

    <button class="btn btn-primary mb-4" onClick="window.history.back()">Go back</button>
{% endblock %}
